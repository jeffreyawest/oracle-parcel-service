  <modelVersion>4.0.0</modelVersion>
  <groupId>com.oracle.demo.ops</groupId>
  <artifactId>ops-cluster</artifactId>
  <version>3.0</version>
  <name>ops-cluster</name>
  <packaging>pom</packaging>

  <!-- ==================================================================================== -->

  <properties>
    <middleware.home>/u01/wls1212/</middleware.home>
    <weblogic.home>/u01/wls1212/wlserver</weblogic.home>
    <coherence.home>/u01/wls1212/coherence</coherence.home>

    <weblogic.version>12.1.2.0</weblogic.version>
    <weblogic.library.version>12.1.2.0.0</weblogic.library.version>
    <weblogic.maven.version>12.1.2.0</weblogic.maven.version>
    <coherence.version>3.7.1</coherence.version>

    <XmlSchema.version>1.4.7</XmlSchema.version>
    <eclipselink.version>2.1.2</eclipselink.version>
    <javax.persistence.version>2.0.0</javax.persistence.version>
  </properties>

  <!-- ==================================================================================== -->


  <profiles>

    <profile>
      <id>create-domain</id>
      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>
          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>wls-maven-plugin</artifactId>
            <version>12.1.2.0</version>

            <executions>
              <execution>
                <id>create-domain</id>
                <phase>install</phase>
                <goals>
                  <goal>wlst</goal>
                </goals>
              </execution>

            </executions>

            <configuration>
              <middlewareHome>${middleware.home}</middlewareHome>
              <weblogicHome>${weblogic.home}</weblogicHome>
              <debug>true</debug>


              <fileName>${project.basedir}/src/main/wlst/create-ops-cluster.py</fileName>
              <propertiesFile>${project.basedir}/../ops-domain.properties</propertiesFile>
              <args>-Dweblogic.security.SSL.ignoreHostnameVerification=true
                -Dweblogic.security.TrustKeyStore=DemoTrust -skipWLSModuleScanning
              </args>

              <user>weblogic</user>
              <password>welcome1</password>
            </configuration>

          </plugin>

        </plugins>
      </build>

    </profile>

    <profile>
      <id>start-domain</id>
      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>
          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>wls-maven-plugin</artifactId>
            <version>12.1.2.0</version>

            <executions>
              <execution>
                <id>start-domain</id>
                <phase>install</phase>
                <goals>
                  <goal>wlst</goal>
                </goals>
              </execution>

            </executions>

            <configuration>
              <middlewareHome>${middleware.home}</middlewareHome>
              <weblogicHome>${weblogic.home}</weblogicHome>
              <debug>true</debug>


              <fileName>${project.basedir}/src/main/wlst/start-ops-cluster.py</fileName>
              <propertiesFile>${project.basedir}/../ops-domain.properties</propertiesFile>
              <args>-Dweblogic.security.SSL.ignoreHostnameVerification=true
                -Dweblogic.security.TrustKeyStore=DemoTrust -skipWLSModuleScanning
              </args>

              <user>weblogic</user>
              <password>welcome1</password>
            </configuration>

          </plugin>

        </plugins>
      </build>

    </profile>
    <profile>
      <id>stop-domain</id>
      <build>
        <defaultGoal>install</defaultGoal>

        <plugins>
          <plugin>
            <groupId>com.oracle.weblogic</groupId>
            <artifactId>wls-maven-plugin</artifactId>
            <version>12.1.2.0</version>

            <executions>
              <execution>
                <id>stop-domain</id>
                <phase>install</phase>
                <goals>
                  <goal>wlst</goal>
                </goals>
              </execution>

            </executions>

            <configuration>
              <middlewareHome>${middleware.home}</middlewareHome>
              <weblogicHome>${weblogic.home}</weblogicHome>
              <debug>true</debug>


              <fileName>${project.basedir}/src/main/wlst/stop-ops-cluster.py</fileName>
              <propertiesFile>${project.basedir}/../ops-domain.properties</propertiesFile>
              <args>-Dweblogic.security.SSL.ignoreHostnameVerification=true
                -Dweblogic.security.TrustKeyStore=DemoTrust -skipWLSModuleScanning
              </args>

              <user>weblogic</user>
              <password>welcome1</password>
            </configuration>

          </plugin>

        </plugins>
      </build>

    </profile>

  </profiles>

</project>